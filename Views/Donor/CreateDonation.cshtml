@model CreateDonationViewModel
@{
    ViewData["Title"] = "Schedule Donation";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="fas fa-hand-holding-heart"></i> Schedule Donation</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Donor/Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Schedule Donation</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="fas fa-calendar-plus"></i> New Donation Request</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6><i class="fas fa-info-circle"></i> Donation Information</h6>
                    <ul class="mb-0">
                        <li>Your Blood Type: <strong class="badge bg-danger">@ViewBag.BloodType</strong></li>
                        <li>Standard donation quantity: 450ml</li>
                        <li>You must wait 90 days between donations</li>
                        <li>Your request will be reviewed by admin</li>
                    </ul>
                </div>

                <form asp-action="CreateDonation" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="DonationDate" class="form-label"></label>
                        <input asp-for="DonationDate" class="form-control" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="DonationDate" class="text-danger"></span>
                        <small class="form-text text-muted">Select your preferred donation date</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Quantity" class="form-label"></label>
                        <select asp-for="Quantity" class="form-select">
                            <option value="350">350 ml</option>
                            <option value="400">400 ml</option>
                            <option value="450" selected>450 ml (Standard)</option>
                            <option value="500">500 ml</option>
                        </select>
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                        <small class="form-text text-muted">Standard donation is 450ml</small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Notes" class="form-label">Additional Notes (Optional)</label>
                        <textarea asp-for="Notes" class="form-control" rows="3" 
                                  placeholder="Any special requests or medical information..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="alert alert-warning">
                        <h6><i class="fas fa-exclamation-triangle"></i> Important Reminders</h6>
                        <ul class="mb-0">
                            <li>Eat a healthy meal before donating</li>
                            <li>Stay hydrated - drink plenty of water</li>
                            <li>Get adequate rest the night before</li>
                            <li>Bring a valid ID</li>
                            <li>Avoid heavy exercise after donation</li>
                        </ul>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fas fa-paper-plane"></i> Submit Donation Request
                        </button>
                        <a href="/Donor/Dashboard" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
