@model List<Donation>
@{
    ViewData["Title"] = "Donation History";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="fas fa-history"></i> Donation History</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Donor/Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Donation History</li>
            </ol>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-list"></i> All Donations (@Model.Count)</h5>
        <a href="/Donor/CreateDonation" class="btn btn-light btn-sm">
            <i class="fas fa-plus"></i> New Donation
        </a>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Quantity</th>
                            <th>Status</th>
                            <th>Notes</th>
                            <th>Submitted</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var donation in Model)
                        {
                            <tr>
                                <td>@donation.Id</td>
                                <td>@donation.DonationDate.ToString("MMM dd, yyyy")</td>
                                <td><strong>@donation.Quantity ml</strong></td>
                                <td>
                                    <span class="status-badge status-@donation.Status.ToLower()">
                                        @donation.Status
                                    </span>
                                </td>
                                <td>@(donation.Notes ?? "-")</td>
                                <td>@donation.CreatedAt.ToString("MMM dd, yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Summary -->
            <div class="row mt-4">
                <div class="col-md-3 text-center">
                    <h4 class="text-danger">@Model.Count</h4>
                    <small class="text-muted">Total Requests</small>
                </div>
                <div class="col-md-3 text-center">
                    <h4 class="text-success">@Model.Count(d => d.Status == "Completed")</h4>
                    <small class="text-muted">Completed</small>
                </div>
                <div class="col-md-3 text-center">
                    <h4 class="text-warning">@Model.Count(d => d.Status == "Pending")</h4>
                    <small class="text-muted">Pending</small>
                </div>
                <div class="col-md-3 text-center">
                    <h4 class="text-info">@Model.Where(d => d.Status == "Completed").Sum(d => d.Quantity) ml</h4>
                    <small class="text-muted">Total Donated</small>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-hand-holding-heart fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No Donation History</h4>
                <p class="text-muted">You haven't made any donation requests yet.</p>
                <a href="/Donor/CreateDonation" class="btn btn-danger mt-3">
                    <i class="fas fa-plus"></i> Schedule Your First Donation
                </a>
            </div>
        }
    </div>
</div>
