@model List<BloodRequest>
@{
    ViewData["Title"] = "Manage Blood Requests";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="fas fa-hospital"></i> Manage Blood Requests</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Blood Requests</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Filter Tabs -->
<ul class="nav nav-tabs mb-3" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" data-bs-toggle="tab" href="#all">All (@Model.Count)</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#pending">Pending (@Model.Count(r => r.Status == "Pending"))</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#approved">Approved (@Model.Count(r => r.Status == "Approved"))</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#fulfilled">Fulfilled (@Model.Count(r => r.Status == "Fulfilled"))</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#rejected">Rejected (@Model.Count(r => r.Status == "Rejected"))</a>
    </li>
</ul>

<div class="tab-content">
    <!-- All Requests -->
    <div id="all" class="tab-pane fade show active">
        @await Html.PartialAsync("_BloodRequestsTable", Model)
    </div>

    <!-- Pending -->
    <div id="pending" class="tab-pane fade">
        @await Html.PartialAsync("_BloodRequestsTable", Model.Where(r => r.Status == "Pending").ToList())
    </div>

    <!-- Approved -->
    <div id="approved" class="tab-pane fade">
        @await Html.PartialAsync("_BloodRequestsTable", Model.Where(r => r.Status == "Approved").ToList())
    </div>

    <!-- Fulfilled -->
    <div id="fulfilled" class="tab-pane fade">
        @await Html.PartialAsync("_BloodRequestsTable", Model.Where(r => r.Status == "Fulfilled").ToList())
    </div>

    <!-- Rejected -->
    <div id="rejected" class="tab-pane fade">
        @await Html.PartialAsync("_BloodRequestsTable", Model.Where(r => r.Status == "Rejected").ToList())
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reject Blood Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="rejectForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="rejectReason" class="form-label">Reason for Rejection</label>
                        <textarea class="form-control" id="rejectReason" name="reason" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showRejectModal(requestId) {
            $('#rejectForm').attr('action', '/Admin/RejectRequest/' + requestId);
            $('#rejectModal').modal('show');
        }
    </script>
}
