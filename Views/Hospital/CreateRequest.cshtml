@model CreateBloodRequestViewModel
@{
    ViewData["Title"] = "Request Blood";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="fas fa-plus-circle"></i> Request Blood</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Hospital/Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Request Blood</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="fas fa-tint"></i> Blood Request Form</h4>
            </div>
            <div class="card-body">
                <form asp-action="CreateRequest" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Important:</strong> Please provide accurate information. Emergency requests will be prioritized.
                    </div>

                    <div class="mb-3">
                        <label asp-for="BloodTypeId" class="form-label"></label>
                        <select asp-for="BloodTypeId" class="form-select">
                            <option value="">Select Blood Type</option>
                            @foreach (var bloodType in (ViewBag.BloodTypes as List<BloodType>)!)
                            {
                                <option value="@bloodType.Id">@bloodType.TypeName - @bloodType.Description</option>
                            }
                        </select>
                        <span asp-validation-for="BloodTypeId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="QuantityRequired" class="form-label"></label>
                        <input type="number" asp-for="QuantityRequired" class="form-control" 
                               min="100" max="5000" step="50" placeholder="Enter quantity in ml" />
                        <span asp-validation-for="QuantityRequired" class="text-danger"></span>
                        <small class="form-text text-muted">Quantity should be between 100ml and 5000ml</small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Notes" class="form-label"></label>
                        <textarea asp-for="Notes" class="form-control" rows="3" 
                                  placeholder="Patient details, specific requirements, contact information, etc."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Note:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Requests will be reviewed by our admin team</li>
                            <li>Regular requests may take 1-3 business days</li>
                            <li>You will be notified via email once your request is approved</li>
                        </ul>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fas fa-paper-plane"></i> Submit Request
                        </button>
                        <a href="/Hospital/Dashboard" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Blood Availability Preview -->
        <div class="card shadow mt-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle"></i> Need to check blood availability first?</h5>
            </div>
            <div class="card-body text-center">
                <p>View current blood stock levels before submitting your request</p>
                <a href="/Hospital/BloodAvailability" class="btn btn-success">
                    <i class="fas fa-tint"></i> Check Blood Availability
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
