@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section text-center">
    <div class="container">
        <h1 class="display-4 fw-bold mb-3">
            <i class="fas fa-heartbeat"></i> Blood Donation Management System
        </h1>
        <p class="lead mb-4">
            Save Lives by Donating Blood - Every Drop Counts
        </p>
        <div class="d-flex justify-content-center gap-3">
            @if (string.IsNullOrEmpty(Context.Session.GetString("UserId")))
            {
                <a href="/Account/Register" class="btn btn-light btn-lg">
                    <i class="fas fa-user-plus"></i> Register as Donor
                </a>
                <a href="/Account/Login" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-sign-in-alt"></i> Login
                </a>
            }
            else if (Context.Session.GetString("UserRole") == "Donor")
            {
                <a href="/Donor/CreateDonation" class="btn btn-light btn-lg">
                    <i class="fas fa-hand-holding-heart"></i> Donate Now
                </a>
            }
        </div>
    </div>
</div>

<div class="row text-center mb-5">
    <div class="col-md-4 mb-3">
        <div class="card card-custom h-100">
            <div class="card-body">
                <i class="fas fa-users fa-3x text-danger mb-3"></i>
                <h3 class="card-title">Register as Donor</h3>
                <p class="card-text">Join our community of life-savers. Register today and make a difference.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card card-custom h-100">
            <div class="card-body">
                <i class="fas fa-tint fa-3x text-danger mb-3"></i>
                <h3 class="card-title">Donate Blood</h3>
                <p class="card-text">Schedule your donation and help save lives in your community.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card card-custom h-100">
            <div class="card-body">
                <i class="fas fa-hospital fa-3x text-danger mb-3"></i>
                <h3 class="card-title">Request Blood</h3>
                <p class="card-text">Hospitals can request blood units quickly and efficiently.</p>
            </div>
        </div>
    </div>
</div>

<div class="row mb-5">
    <div class="col-md-12">
        <h2 class="text-center mb-4">
            <i class="fas fa-info-circle"></i> Blood Types Information
        </h2>
        <div class="row">
            <div class="col-md-3 col-6 mb-3 text-center">
                <span class="badge bg-danger blood-type-badge">A+</span>
            </div>
            <div class="col-md-3 col-6 mb-3 text-center">
                <span class="badge bg-danger blood-type-badge">A-</span>
            </div>
            <div class="col-md-3 col-6 mb-3 text-center">
                <span class="badge bg-danger blood-type-badge">B+</span>
            </div>
            <div class="col-md-3 col-6 mb-3 text-center">
                <span class="badge bg-danger blood-type-badge">B-</span>
            </div>
            <div class="col-md-3 col-6 mb-3 text-center">
                <span class="badge bg-danger blood-type-badge">AB+</span>
            </div>
            <div class="col-md-3 col-6 mb-3 text-center">
                <span class="badge bg-danger blood-type-badge">AB-</span>
            </div>
            <div class="col-md-3 col-6 mb-3 text-center">
                <span class="badge bg-danger blood-type-badge">O+</span>
            </div>
            <div class="col-md-3 col-6 mb-3 text-center">
                <span class="badge bg-danger blood-type-badge">O-</span>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center mb-4">
                    <i class="fas fa-question-circle"></i> Why Donate Blood?
                </h3>
                <div class="row">
                    <div class="col-md-6">
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-check-circle text-success"></i> Save up to 3 lives with one donation</li>
                            <li class="mb-2"><i class="fas fa-check-circle text-success"></i> Help accident victims and surgery patients</li>
                            <li class="mb-2"><i class="fas fa-check-circle text-success"></i> Support cancer treatment patients</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-check-circle text-success"></i> Assist mothers during childbirth</li>
                            <li class="mb-2"><i class="fas fa-check-circle text-success"></i> Health benefits for donors</li>
                            <li class="mb-2"><i class="fas fa-check-circle text-success"></i> Feel good about helping others</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
